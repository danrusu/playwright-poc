{
  "name": "playwright-poc",
  "type": "module",
  "version": "1.0.0",
  "description": "Playwright usage POC",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "postinstall": "playwright install --with-deps",
    "format:check": "prettier --check .",
    "format": "prettier . --write",
    "build": "tsc -p tsconfig.json --noEmit",
    "report": "playwright show-report",
    "report:allure:create": "allure generate my-allure-results --clean -o allure-report",
    "report:allure:open": "allure open",
    "test:demo": "playwright test tests/demo.spec.ts",
    "test:testutls": "playwright test tests/testutils"
  },
  "keywords": [],
  "author": "Dan rusu <danginkgo.@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.51.1",
    "allure-commandline": "^2.33.0",
    "allure-playwright": "^2.15.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "husky": "^9.1.7",
    "pg-promise": "^11.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
